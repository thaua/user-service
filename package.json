{
  "name": "user-service",
  "version": "1.0.0",
  "description": "A generic users service for common implementations containing signing up, signing in and authentication",
  "main": "index.js",
  "directories": {
    "test": "spec"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write --check ./src --config ./.prettierrc",
    "lint": "eslint --fix .",
    "start:dev": "nodemon --watch ./src -L --exec 'ts-node -r tsconfig-paths/register src/index.ts'",
    "start:prod": "node dist/index.js",
    "test": "jest",
    "bootstrap": "husky install && npx prisma generate"
  },
  "author": "",
  "license": "ISC",
  "prisma": {
    "schema": "src/infrastructure/data/db/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.6.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
